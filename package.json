{
  "name": "clipforge",
  "version": "0.1.0",
  "description": "ClipForge - Desktop Video Editor",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on   http://localhost:5173 && electron .\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "video",
    "editor",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.5",
    "video.js": "^8.10.0",
    "wavesurfer.js": "^7.8.0",
    "allotment": "^1.3.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "@ffmpeg/ffmpeg": "^0.12.10",
    "react-icons": "^5.2.1"
  },
  "build": {
    "appId": "com.gauntlet.clipforge",
    "productName": "ClipForge",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/fluent-ffmpeg",
        "to": "fluent-ffmpeg",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "AudioVideo"
    }
  }
}

